{
	"folders": [
		{
			"path": "."
		}
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		
		// Hide Node packages
		"node_modules/": true,

		// Hide NPM install files
		"package*.json": true,

		// Hide environment files
		".env": true,

		// Hide Git
		".gitignore": true,

		// Hide VS Code
		".vscode/": true
	},
	// Tab settings for javascript
	"editor.tabSize": 2,
	"editor.insertSpaces": true

}

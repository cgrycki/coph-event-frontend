{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		
		// Hide Node packages
		"node_modules/": true,
		"node_module.s/": true,

		// Hide NPM install files
		"package*.json": true,

		// Hide ESLint configuration
		".eslintrc.json": true,

		// Hide environment files
		".env": true,

		// Hide Git
		".gitignore": true,

		// Hide VS Code
		".vscode/": true,
		
		// Hide old code until we intergrate
		"old-src": true
	},
	// Tab settings for javascript
	"editor.tabSize": 2,
	"editor.insertSpaces": true

}
